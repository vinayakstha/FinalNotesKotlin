<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UpdateNotesActivity">

    <TextView
        android:id="@+id/createnotestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write something on your notes"
        android:fontFamily="@font/comfortaabold"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/subtextnotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update Notes."
        android:textSize="14sp"
        android:fontFamily="@font/comfortaaregular"
        app:layout_constraintTop_toBottomOf="@+id/createnotestext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp" />

    <EditText
        android:id="@+id/notesupdateEditText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="write here"
        android:fontFamily="@font/comfortaaregular"
        android:background="@drawable/rounded_edittext"
        android:textSize="16sp"
        android:padding="14dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/subtextnotes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Updated ID for the Date Button -->
    <Button
        android:id="@+id/datePickerButton"
        android:layout_width="378dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue"
        android:drawablePadding="0dp"
        android:drawableTint="@color/white"
        android:elevation="3dp"
        android:fontFamily="@font/comfortaabold"
        android:text="Add Date"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesupdateEditText" />

    <EditText
        android:id="@+id/notesupdateDescriptionEditText"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/comfortaaregular"
        android:hint="write in brief"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton" />

    <Button
        android:id="@+id/UpdateNoteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/comfortaabold"
        android:padding="20dp"
        android:text="Update Note"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesupdateDescriptionEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>
